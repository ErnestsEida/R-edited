= stylesheet_link_tag 'admin'
= render partial: "admin_panel"
h1.text-end
  = t('manage_token_packs').upcase
= render partial: "admin/token_packs/token_pack_form", locals: { token_pack: @token_pack }
hr
h3.text-center
  = t('admin_manage_token_packs.existing_packs')
.row
  - @token_packs.each do |pack|
    .col-lg-3.col-md-4.col-sm-6.col-12
      .card.token-pack-card
        .card-header
          h3.card-title
            = pack.title
          = link_to admin_token_pack_path(pack), method: :delete, title: "Remove", data: { toggle: "tooltip" } do
            i.bi.bi-trash
          = link_to edit_admin_token_pack_path(pack), title: "Edit", data: { toggle: "tooltip" } do
            i.bi.bi-pencil
        .card-body
          p.card-text
            = pack.description
        .card-footer.d-flex.justify-content-around
          p
            = pack.price
            | $
          p.bi.bi-coin
            = pack.token_amount
