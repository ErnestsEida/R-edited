= form_with model: [community, post] do |f|
  = f.label :title, class: "form-label"
  = f.text_field :title, class: "form-control", placeholder: "Title"
  = f.label :content, class: "form-label"
  = f.text_area :content, size: "5x10", class: "form-control", style:"margin-bottom:2%", placeholder: "Your text here..."
  = f.hidden_field :community_id, value: community.id
  = f.label :tags, class: "form-label"
  = f.text_field :tags, value: post.tags_as_json, id: "post-tags", placeholder: "Tags..."
  - if action_name == 'edit'
    = f.submit "Update", class: "btn btn-primary"
    = link_to "Delete", community_post_path(post.id), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger"
  - else
    = f.submit "Create", class: "btn btn-primary"
